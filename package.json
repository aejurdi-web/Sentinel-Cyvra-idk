{
  "name": "sentinel",
  "version": "2.0.0",
  "description": "Sentinel - Intelligent password security manager with automation and AI assistance.",
  "main": "dist/main/main.js",
  "scripts": {
    "predev": "dotenv -e .env -- echo 'Starting Sentinel dev mode'",
    "dev": "cross-env NODE_ENV=development concurrently \"npm:watch:main\" \"npm:watch:preload\" \"npm:dev:renderer\" \"npm:start:electron\"",
    "start": "electron .",
    "watch:main": "tsc --project tsconfig.main.json --watch",
    "watch:preload": "tsc --project tsconfig.preload.json --watch",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "start:electron": "wait-on http://localhost:5174 dist/main/main.js dist/preload/preload.js && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint -c .eslintrc.cjs 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "openai": "^4.20.0",
    "autoprefixer": "^10.4.18",
    "better-sqlite3": "^9.0.0",
    "chart.js": "^4.4.0",
    "concurrently": "^8.2.2",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.3.1",
    "electron": "^27.0.0",
    "electron-updater": "^6.1.1",
    "imapflow": "^1.0.126",
    "keytar": "^7.10.0",
    "node-schedule": "^2.1.1",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.9.0",
    "tailwindcss": "^3.4.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@types/better-sqlite3": "^7.6.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.29",
    "@types/react-dom": "^18.2.12",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vite": "^5.0.7",
    "wait-on": "^7.2.0"
  },
  "optionalDependencies": {
    "node-mac-touchid": "^1.1.0",
    "node-windows-hello": "^1.0.7"
  }
}
