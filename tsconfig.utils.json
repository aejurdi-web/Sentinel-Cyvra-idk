{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist/utils",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/utils/**/*", "src/services/**/*", "src/automation/**/*", "src/types/**/*"],
  "exclude": ["src/renderer", "src/preload", "src/main"]
}
